---
import Logo from "../assets/icones/logo.svg";
import Menu from "../assets/icones/menu.svg";
const currentPath = Astro.url.pathname;
---

<header
  class="bg-[#E2CCB3] text-black flex justify-between items-center w-full p-4 h-16 lg:py-0 lg:bg-[#E2CCB3]"
  id="header"
>
  <a href="/" class="flex items-center">
    <Logo class="w-24" />
  </a>

  <nav class="hidden lg:flex lg:items-center lg:gap-8" id="menu">
    <ul class="flex gap-6 text-black">
      <li>
        <a
          class="block px-5 py-4 lg:py-8"
          href="https://www.fnacspectacles.com/">Billeterie</a>
      </li>
      <li>
        <a class="block px-5 py-4 lg:py-8" href="/nosfilms"
          >Programmation des films</a
        >
      </li>
      <li>
        <a class="block px-5 py-4 lg:py-8" href="/nosinvités">Nos invités</a>
      </li>
      <li>
        <a class="block px-5 py-4 lg:py-8" href="/nosactivites">Nos activités</a
        >
      </li>
      <li>
        <a class="block px-5 py-4 lg:py-8" href="/infospratiques"
          >Infos pratiques</a
        >
      </li>
      <li>
        <a class="block px-5 py-4 lg:py-8" href="/apropos">À propos</a>
      </li>
      <li><a class="block px-5 py-4 lg:py-8" href="/contact">Contact</a></li>
    </ul>
  </nav>

  <button
    id="menu-btn"
    class="group z-100 flex h-3 w-6 flex-col justify-between lg:hidden ml-auto *:block *:ease *:h-0.5 *:w-full *:transform *:rounded-full *:bg-black *:transition *:duration-300"
    aria-label="Menu"
    aria-controls="menu"
    aria-expanded="false"
  >
    <span
      class="group-aria-expanded:translate-y-[5.5px] group-aria-expanded:rotate-45"
    ></span>
    <span class="group-aria-expanded:opacity-0"></span>
    <span
      class="group-aria-expanded:-translate-y-[5px] group-aria-expanded:-rotate-45"
    ></span>
  </button>

  <nav
    class="fixed z-10 inset-0 bg-[#E2CCB3] text-3xl text-black opacity-100 transition-all duration-200 ease-in-out aria-hidden:invisible aria-hidden:opacity-0 lg:hidden"
    id="mobile-menu"
    aria-hidden="true"
  >
    <Logo class="w-48" />
    <ul class="mt-10 mx-12 space-y-6">
      <li><a class="block px-5 py-4" href="">Billeterie</a></li>
      <li>
        <a class="block px-5 py-4" href="/nosfilms">Programmation des films</a>
      </li>
      <li><a class="block px-5 py-4" href="/nosinvités">Nos invités</a></li>
      <li><a class="block px-5 py-4" href="/nosactivites">Nos activités</a></li>
      <li>
        <a class="block px-5 py-4" href="/infospratiques">Infos pratiques</a>
      </li>
      <li><a class="block px-5 py-4" href="/apropos">À propos</a></li>
      <li><a class="block px-5 py-4" href="/contact">Contact</a></li>
    </ul>
  </nav>
</header>

<script>
  const toggle = document.querySelector("#menu-btn");
  const mobileNav = document.querySelector("#mobile-menu");
  const page = document.body;

  if (toggle && mobileNav) {
    toggle.addEventListener("click", () => {
      const isOpen = toggle.ariaExpanded === "true";
      toggle.ariaExpanded = String(!isOpen);
      mobileNav.ariaHidden = String(isOpen);
      page.classList.toggle("noscroll", !isOpen);
    });
  }
</script>
