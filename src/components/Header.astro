---
import Logo from "../assets/icones/logo.svg";
import Menu from "../assets/icones/menu.svg";
---

<header
  class="bg-[#E2CCB3] text-black flex justify-between items-center p-4 h-16"
>
  <a href="/" class="flex items-center">
    <Logo class="w-24" />
  </a>

  <button
    class="relative z-20 flex h-6 w-8 flex-col justify-between *:h-[2px] *:w-full *:bg-black"
    id="menu-btn"
    aria-label="Menu"
    aria-controls="menu"
    aria-expanded="false"
  >
    <span></span>
    <span></span>
    <span></span>
  </button>

  <nav
    class="visible fixed z-10 inset-0 bg-[#E2CCB3] text-3xl text-black opacity-100 transition-all duration-200 ease-in-out aria-hidden:invisible aria-hidden:opacity-0"
    id="menu"
    aria-hidden="true"
  >
  <Logo class="w-24" />
    <ul class="mt-[25vh] mx-16">
      <li>
        <a class="block px-5 py-4" href="">Billeterie</a>
      </li>
      <li>
        <a class="block px-5 py-4" href="/Programmation">Programmation</a>
      </li>
      <li>
        <a class="block px-5 py-4" href="src/pages/nosinvités/index.astro">Nos invités</a>
      </li>
      <li>
        <a class="block px-5 py-4" href="/Infos pratiques">Infos pratiques</a>
      </li>
      <li>
        <a class="block px-5 py-4" href="/apropos.astro">A propos</a>
      </li>
      <li>
        <a class="block px-5 py-4" href="/Contact">Contact</a>
      </li>
    </ul>
  </nav>
</header>

<script>
  const toggle = document.querySelector("#menu-btn");
  const nav = document.querySelector("#menu");
  const page = document.body;

  if (toggle && nav) {
    toggle.addEventListener("click", () => {
      const isOpen = toggle.ariaExpanded === "true";
      const isClosed = !isOpen;

      toggle.ariaExpanded = String(isClosed);
      nav.ariaHidden = String(isOpen);
      page.classList.toggle("noscroll", isClosed);
    });
  }
</script>
